@model IEnumerable<GymMoli.Models.Membresias>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Tipo_Membresía)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Precio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Duración_Días)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Tipo_Membresía)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Precio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Duración_Días)
            </td>
            <td>
                <a class="btn btn-warning mx-1" asp-action="Edit" asp-route-id="@item.ID_Membresía">Edit</a> 
                <a class="btn btn-info mx-1" asp-action="Details" asp-route-id="@item.ID_Membresía">Details</a> 
                <a class="btn btn-danger mx-1" asp-action="Delete" asp-route-id="@item.ID_Membresía">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
