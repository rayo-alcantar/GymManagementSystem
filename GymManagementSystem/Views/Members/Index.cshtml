@model IEnumerable<GymManagementSystem.Models.Member>

@{
    ViewData["Title"] = "Index";
}

<h1>Bienvenido a la Gestión de Miembros</h1>

<p>
    <a href="@Url.Action("Create", "Members")" class="btn btn-primary" style="padding: 10px 20px; font-size: 16px;">Añadir Nuevo Miembro</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().MembershipDate)
            </th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @item.MembershipDate.ToString("dd/MM/yyyy HH:mm:ss")
                    </td>
                    <td>
                        <a href="@Url.Action("Edit", "Members", new { id = item.Id })" class="btn btn-sm btn-warning">Editar</a>
                        <a href="@Url.Action("Details", "Members", new { id = item.Id })" class="btn btn-sm btn-info">Detalles</a>
                        <a href="@Url.Action("Delete", "Members", new { id = item.Id })" class="btn btn-sm btn-danger">Eliminar</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="4">No hay miembros disponibles.</td>
            </tr>
        }
    </tbody>
</table>
